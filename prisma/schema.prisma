generator client {
  provider = "prisma-client"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
}

model Comment {
  id         Int      @id @default(autoincrement())
  createdAt  DateTime @default(now()) @db.Timestamp(6)
  content    String   @db.VarChar(3000)
  published  Boolean  @default(false)
  locationId Int
  userId     String
  location   Location @relation(fields: [locationId], references: [id])
  user       User     @relation(fields: [userId], references: [id])
}

model Location {
  id          Int       @id @default(autoincrement())
  name        String    @db.VarChar(80)
  createdAt   DateTime  @default(now()) @db.Timestamp(6)
  updatedAt   DateTime  @default(now()) @updatedAt
  description String    @db.VarChar(3000)
  city        String    @db.VarChar(100)
  type        String    @db.VarChar(25)
  geometry    String    @db.VarChar(25)
  coordinates String    @db.VarChar(100)
  faction     String    @db.VarChar(400)
  source      String    @db.VarChar(100)
  userId      String
  published   Boolean   @default(false)
  capital     Boolean   @default(false)
  destroyed   Boolean   @default(false)
  resolved    Boolean   @default(false)
  unofficial  Boolean   @default(false)
  alias       String?   @db.VarChar(150)
  map         String
  comments    Comment[]
  user        User      @relation(fields: [userId], references: [id])
}

model Map {
  id          String   @id @default(uuid(7))
  name        String   @db.VarChar(200)
  createdAt   DateTime @default(now()) @db.Timestamp(6)
  lastUsed    DateTime @default(now()) @db.Timestamp(6)
  updatedAt   DateTime @updatedAt
  userId      String
  published   Boolean  @default(false)
  locations   Int      @default(0)
  territories Int      @default(0)
  guides      Int      @default(0)
  map         String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  vip           Boolean   @default(false)
  premium       Boolean   @default(false)
  email         String    @unique
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  emailVerified DateTime?
  secret        String    @unique @default(uuid(7))
  image         String?
  name          String?   @db.VarChar(16)

  // purchases
  stripeSession    String?   @unique // exact Checkout Session
  stripePayment    String?   @unique // find the payment object for status
  stripeName       String?
  stripeEmail      String?
  premiumGrantedAt DateTime?

  accounts  Account[]
  comments  Comment[]
  locations Location[]
  maps      Map[]
  sessions  Session[]
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
}

model caffine {
  last_caffine DateTime @id
}
